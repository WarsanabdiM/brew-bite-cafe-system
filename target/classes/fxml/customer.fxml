<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controller.CustomerController">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <padding><Insets top="10" left="10" bottom="10" right="10"/></padding>
            <Label text="Customer Menu" style="-fx-font-size: 20px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <left>
        <TableView fx:id="menuTable" prefWidth="300"/>
    </left>

    <center>
        <VBox spacing="10" padding="10">
            <TextArea fx:id="orderSummaryArea" prefRowCount="20"/>
            <Button fx:id="placeOrderButton"
                    text="Place Order"
                    onAction="#handlePlaceOrder"/>
        </VBox>
    </center>
</BorderPane>

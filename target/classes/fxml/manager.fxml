<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controller.ManagerController">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <padding><Insets top="10" left="10" bottom="10" right="10"/></padding>
            <Label text="Manager Dashboard" style="-fx-font-size:20px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" padding="10">
            <Button text="Inventory" onAction="#handleShowInventory"/>
            <Button text="Menu" onAction="#handleShowMenu"/>
            <Button text="Orders" onAction="#handleShowOrders"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea"/>
    </center>

</BorderPane>

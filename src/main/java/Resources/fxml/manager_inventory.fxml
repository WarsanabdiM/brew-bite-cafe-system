<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="app.controller.ManagerController"
            stylesheets="@../styles.css" prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox styleClass="header-box" spacing="20" alignment="CENTER_LEFT">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            <Label text="Inventory Management" styleClass="label-header"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnBackToMenu" text="Back to Menu" styleClass="button-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            
            <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colIngId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colIngName" text="Ingredient" prefWidth="200"/>
                    <TableColumn fx:id="colIngQty" text="Quantity" prefWidth="150"/>
                    <TableColumn fx:id="colIngUnit" text="Unit" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Restock Selected Item:" />
                <TextField fx:id="txtRestockAmount" promptText="Amount (e.g. 500)" />
                <Button fx:id="btnRestock" text="Add Stock" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
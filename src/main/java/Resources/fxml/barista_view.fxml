<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../styles.css" prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-box">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            <Label text="Barista Dashboard" styleClass="label-header"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnLogout" text="Log Out" styleClass="button-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Pending Orders (FIFO Queue)" styleClass="label-subheader"/>
            
            <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colOrderId" text="Order ID" prefWidth="100"/>
                    <TableColumn fx:id="colCustomer" text="Customer" prefWidth="150"/>
                    <TableColumn fx:id="colItems" text="Items" prefWidth="300"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
                    <TableColumn fx:id="colTime" text="Time Placed" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            <Button fx:id="btnUpdateStatus" text="Mark as Ready" styleClass="button-secondary"/>
            <Button fx:id="btnCompleteOrder" text="Complete Order" styleClass="button-success"/>
        </HBox>
    </bottom>

</BorderPane>